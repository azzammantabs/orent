<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_mobil"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="162dp"
        android:layout_height="167dp"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/img_mobil"
            android:layout_width="150dp"
            android:layout_height="87dp"
            android:src="@drawable/ic_mail"/>
        <TextView
            android:id="@+id/tv_namadepanmobil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitsubishi"
            android:textColor="@android:color/black"
            android:fontFamily="Calibri"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_namabelakangmobil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xpander"
            android:textColor="@android:color/black"
            android:fontFamily="Calibri"
            android:textSize="20sp"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="162dp"
        android:layout_height="167dp"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_mobil2"
            android:layout_width="150dp"
            android:layout_height="87dp"
            android:src="@drawable/ic_mail"/>
        <TextView
            android:id="@+id/tv_namadepanmobil2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitsubishi"
            android:textColor="@android:color/black"
            android:fontFamily="Calibri"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_namabelakangmobil2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xpander"
            android:textColor="@android:color/black"
            android:fontFamily="Calibri"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>